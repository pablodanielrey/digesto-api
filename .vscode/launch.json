    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "port": 11304,
            "host": "163.10.56.57",
            "pathMappings": [
                {
                    "localRoot": "/src/github/digesto-api",
                    "remoteRoot": "/src/github/digesto-api"
                }
            ]
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "digesto.api.rest.wsgi:app",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0",
                "FLASK_RUN_PORT": "11302"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "/tmp"
            ]
        }
    ]
}